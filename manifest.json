{
   "manifest_version": 2,
   "background": {
      "scripts": ["background.js"]
   },
   "description": "Makes it easy to login as another user.  Maintains the page currently being viewed.",
   "name": "Salesforce Login As",
   "page_action": {
      "default_icon": "icon.png",
      "default_title": "Quickly Login As Another User",
      "default_popup": "popup.html"
   },
   "permissions": [ "tabs", "https://*.salesforce.com/", "https://*.visual.force.com/", "https://*.lightning.force.com/" ],
   "version": "2"
}
